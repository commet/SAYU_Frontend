# Environment
NODE_ENV=development

# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://sayu_user:your_password@localhost:5432/sayu_db
DATABASE_SSL_REJECT_UNAUTHORIZED=false  # Set to false for Railway PostgreSQL

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Image Storage (Optional - Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Sentry (Error Tracking) - Optional
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=info

# APT Vector System
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
VECTOR_DIMENSIONS=256
CACHE_WARMUP_ENABLED=false
CACHE_WARMUP_BATCH_SIZE=50

# Session Secret (for OAuth)
SESSION_SECRET=your-session-secret-change-this-in-production

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth - Apple (Sign in with Apple)
APPLE_CLIENT_ID=com.yourcompany.sayu
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-apple-private-key\n-----END PRIVATE KEY-----

# OAuth - Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3001/api/oauth/instagram/callback

# Email Configuration
EMAIL_SERVICE=SendGrid
EMAIL_USER=your-sendgrid-username
EMAIL_PASSWORD=your-sendgrid-password
EMAIL_FROM=noreply@sayu.art

# Email Automation
ENABLE_EMAIL_AUTOMATION=true

# Replicate API (AI Art Profile)
REPLICATE_API_TOKEN=your-replicate-api-token

# Google AI API (Chatbot)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Art Profile Settings
ART_PROFILE_FREE_MONTHLY_LIMIT=3
ART_PROFILE_PREMIUM_MONTHLY_LIMIT=30

# Supabase (Optional - for hybrid architecture)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Hybrid Database Settings
ENABLE_SUPABASE=false
MIGRATE_TO_SUPABASE=false
SUPABASE_SERVICES=gamification,artProfiles

# Naver API (Exhibition Collection)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Exhibition Collection Settings
ENABLE_INTERNATIONAL_COLLECTION=false

# 문화데이터광장 API (Culture Data Plaza)
CULTURE_API_KEY=your-culture-data-plaza-api-key

# 서울시 열린데이터광장 API
SEOUL_API_KEY=your-seoul-open-data-api-key

# Google Places API (갤러리 위치 정보)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Harvard Art Museums API
HARVARD_API_KEY=your-harvard-api-key

# 전시 정보 수집 설정
EXHIBITION_COLLECTION_ENABLED=true
EXHIBITION_CRAWLING_ENABLED=true
EXHIBITION_UPDATE_INTERVAL=3600000  # 1시간마다 업데이트 (밀리초)
MAX_CONCURRENT_CRAWLS=3  # 동시 크롤링 제한
CRAWL_TIMEOUT=30000  # 크롤링 타임아웃 (밀리초)

# 크롤링 디버그 설정
PUPPETEER_HEADLESS=true  # false로 설정시 브라우저 창 표시
PUPPETEER_SLOWMO=0  # 크롤링 속도 조절 (밀리초)

# 부산/대구 등 지역 API (확장용)
BUSAN_API_KEY=your-busan-api-key
DAEGU_API_KEY=your-daegu-api-key
