{
  "name": "backend",
  "version": "1.0.0",
  "description": "SAYU Art Life Platform Backend",
  "main": "sayu-living-server.js",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=2048' node sayu-living-server.js",
    "start:full": "SAYU_MODE=full node src/server.js",
    "dev": "nodemon sayu-living-server.js",
    "dev:full": "SAYU_MODE=full nodemon src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "db:setup": "node src/scripts/setupDatabase.js",
    "global:setup": "node test-global-collection.js --setup",
    "global:test": "node test-global-collection.js",
    "global:test:quick": "node test-global-collection.js --quick",
    "global:collect": "node collect-global-museums.js",
    "global:collect:test": "node collect-global-museums.js --test",
    "global:status": "node collect-global-museums.js --status",
    "global:logs": "node collect-global-museums.js --logs",
    "artmap:test": "node src/services/artmap-crawler/test-artmap-crawler.js",
    "artmap:test:full": "node src/services/artmap-crawler/test-artmap-crawler.js --full",
    "artmap:crawl": "node src/services/artmap-crawler/batch-crawl-artmap.js",
    "artmap:crawl:tier1": "node src/services/artmap-crawler/batch-crawl-artmap.js --tier1",
    "artmap:crawl:tier2": "node src/services/artmap-crawler/batch-crawl-artmap.js --tier2",
    "artmap:crawl:all": "node src/services/artmap-crawler/batch-crawl-artmap.js --all",
    "artmap:cron": "node src/services/artmap-crawler/artmap-cron-job.js",
    "artmap:cron:now": "node src/services/artmap-crawler/artmap-cron-job.js --now",
    "artmap:manual": "node src/services/artmap-crawler/artmap-cron-job.js --manual",
    "massive:test": "node test-massive-collection.js",
    "massive:test:quick": "node test-massive-collection.js --collection",
    "massive:collect": "node run-massive-collection.js --start --yes",
    "massive:collect:quick": "node run-massive-collection.js --start --quick --yes",
    "massive:collect:safe": "node run-massive-collection.js --start --safe --yes",
    "start:production": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=2048 --optimize-for-size --expose-gc' node sayu-living-server.js",
    "memory:check": "node ../kill-node-processes.js --status",
    "memory:clean": "node ../kill-node-processes.js --auto-cleanup",
    "memory:monitor": "node ../kill-node-processes.js --monitor --interval 3",
    "memory:detect": "node memory-leak-detector.js --analysis-duration 10 --monitor-interval 5"
  },
  "keywords": [
    "art",
    "museum",
    "gallery",
    "personality",
    "matching",
    "ai",
    "culture"
  ],
  "author": "SAYU Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@sayu/shared": "file:../shared",
    "@sentry/node": "^9.42.1",
    "@sentry/profiling-node": "^9.42.1",
    "@supabase/supabase-js": "^2.54.0",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "canvas-confetti": "^1.9.3",
    "cheerio": "^1.1.2",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.4",
    "openai": "^4.2.0",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pgvector": "^0.1.0",
    "puppeteer": "^24.16.0",
    "rate-limit-redis": "^4.2.1",
    "redis": "^4.6.7",
    "replicate": "^0.12.3",
    "sharp": "^0.32.5",
    "streamifier": "^0.1.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sayu.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/sayu/issues"
  },
  "homepage": "https://sayu.art"
}
