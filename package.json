{
  "name": "sayu-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "build": "npm run build:shared && echo 'Build completed'",
    "build:shared": "npm run build --workspace=@sayu/shared",
    "start": "cd backend && node sayu-living-server.js",
    "typecheck": "cd frontend && npm exec -- tsc --noEmit",
    "typecheck:watch": "cd frontend && npx tsc --noEmit --watch",
    "lint": "cd frontend && npm run lint",
    "test": "cd backend && npm test",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:shared": "npm run dev --workspace=@sayu/shared",
    "health-check": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@playwright/mcp": "^0.0.32",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "pm2": "^6.0.6"
  },
  "devDependencies": {
    "@railway/cli": "^4.5.3",
    "conventional-changelog-cli": "^5.0.0"
  }
}
